<%- headers = ['People', 'Grade', 'Last', 'First', 'Code', 'Email', 'Email2', 'Flyer Sent Date'] -%>
<%= CSV.generate_line headers -%>
<%=
  CSV.generate do |csv|
    @students.each do |student|
      csv << [
          student.teacher.last,
          student.teacher.grade,
          student.last,
          student.first,
          student.code,
          student.email,
          student.email2,
          student.flyer_sent_date.nil? ? "" : student.flyer_sent_date.strftime("%m/%d/%Y")]
    end
  end.html_safe
%>
