<script>
    jQuery(document).ready(function () {
        jQuery("tr:even").addClass("even");
    });
</script>

<%= render '/wmgr/includes/search' %>

<div class="content">
  <div class="half-bottom"></div>
  <div class="box-960 half-bottom">

    <h4 style="float:left;">Camp Westwind Overview</h4>
    <div style="float:right;"><%= Time.zone.now.strftime "%m/%d/%Y %H:%M:%S" %></div>
    <div style="clear:both"></div>

    <table class="table">
      <tbody>
      <tr>
        <th></th>
        <th class="table-title blue-title">WEEK 1</th>
        <th class="table-title orange-title">WEEK 2</th>
        <th class="table-title purple-title">WEEK 3</th>
      </tr>
      <tr>
        <td style="font-weight:bold;">FAMILIES</td>
        <td><%= @summary[:registered][:week1].length %></td>
        <td><%= @summary[:registered][:week2].length %></td>
        <td><%= @summary[:registered][:week3].length %></td>
      </tr>
      <tr>
        <td style="font-weight:bold;">PEOPLE</td>
        <td><%= @summary[:people][:week1].length %></td>
        <td><%= @summary[:people][:week2].length %></td>
        <td><%= @summary[:people][:week3].length %></td>
      </tr>
      <tr>
        <td style="font-weight:bold;color:green;">ONK MEMBERS</td>
        <td><%= link_to @summary[:onk_members][:week1y].length, wmgr_onk_complete_path(1) %></td>
        <td><%= link_to @summary[:onk_members][:week2y].length, wmgr_onk_complete_path(2) %></td>
        <td><%= link_to @summary[:onk_members][:week3y].length, wmgr_onk_complete_path(3) %></td>
      </tr>
      <tr>
        <td style="font-weight:bold;color:green;">DEPOSIT PAID</td>
        <td><%= link_to @summary[:deposit_paid][:week1y].length, wmgr_deposit_paid_path(1) %></td>
        <td><%= link_to @summary[:deposit_paid][:week2y].length, wmgr_deposit_paid_path(2) %></td>
        <td><%= link_to @summary[:deposit_paid][:week3y].length, wmgr_deposit_paid_path(3) %></td>
      </tr>
      <tr>
        <td style="font-weight:bold;color:green;">PAID IN FULL</td>
        <td><%= link_to @summary[:paid_full][:week1y].length, wmgr_fullpayment_paid_path(1) %></td>
        <td><%= link_to @summary[:paid_full][:week2y].length, wmgr_fullpayment_paid_path(2) %></td>
        <td><%= link_to @summary[:paid_full][:week3y].length, wmgr_fullpayment_paid_path(3) %></td>
      </tr>
      <tr>
        <td style="font-weight:bold;color:green;">DIETARY INFO COMPLETED</td>
        <td><%= link_to @summary[:dietary][:week1y].length, wmgr_dietary_complete_path(1) %></td>
        <td><%= link_to @summary[:dietary][:week2y].length, wmgr_dietary_complete_path(2) %></td>
        <td><%= link_to @summary[:dietary][:week3y].length, wmgr_dietary_complete_path(3) %></td>
      </tr>
      <tr>
        <td style="font-weight:bold;color:green;">WAIVERS COMPLETE</td>
        <td><%= link_to @summary[:waivers][:week1y].length, wmgr_waivers_complete_path(1) %></td>
        <td><%= link_to @summary[:waivers][:week2y].length, wmgr_waivers_complete_path(2) %></td>
        <td><%= link_to @summary[:waivers][:week3y].length, wmgr_waivers_complete_path(3) %></td>
      </tr>
      <tr>
        <td style="font-weight:bold;color:red;">!ONK MEMBERS</td>
        <td><%= link_to @summary[:onk_members][:week1n].length, wmgr_onk_incomplete_path(1) %></td>
        <td><%= link_to @summary[:onk_members][:week2n].length, wmgr_onk_incomplete_path(2) %></td>
        <td><%= link_to @summary[:onk_members][:week3n].length, wmgr_onk_incomplete_path(3) %></td>
      </tr>
      <tr>
        <td style="font-weight:bold;color:red;">DEPOSIT UNPAID</td>
        <td><%= link_to @summary[:deposit_paid][:week1n].length, wmgr_deposit_unpaid_path(1) %></td>
        <td><%= link_to @summary[:deposit_paid][:week2n].length, wmgr_deposit_unpaid_path(2) %></td>
        <td><%= link_to @summary[:deposit_paid][:week3n].length, wmgr_deposit_unpaid_path(3) %></td>
      </tr>
      <tr>
        <td style="font-weight:bold;color:red;">BALANCE DUE</td>
        <td><%= link_to @summary[:paid_full][:week1n].length, wmgr_fullpayment_unpaid_path(1) %></td>
        <td><%= link_to @summary[:paid_full][:week2n].length, wmgr_fullpayment_unpaid_path(2) %></td>
        <td><%= link_to @summary[:paid_full][:week3n].length, wmgr_fullpayment_unpaid_path(3) %></td>
      </tr>
      <tr>
        <td style="font-weight:bold;color:red;">DIETARY INFO INCOMPLETED</td>
        <td><%= link_to @summary[:dietary][:week1n].length, wmgr_dietary_incomplete_path(1) %></td>
        <td><%= link_to @summary[:dietary][:week2n].length, wmgr_dietary_incomplete_path(2) %></td>
        <td><%= link_to @summary[:dietary][:week3n].length, wmgr_dietary_incomplete_path(3) %></td>
      </tr>
      <tr>
        <td style="font-weight:bold;color:red;">WAIVERS TO BE COMPLETED</td>
        <td><%= link_to @summary[:waivers][:week1n].length, wmgr_waivers_incomplete_path(1) %></td>
        <td><%= link_to @summary[:waivers][:week2n].length, wmgr_waivers_incomplete_path(2) %></td>
        <td><%= link_to @summary[:waivers][:week3n].length, wmgr_waivers_incomplete_path(3) %></td>
      </tr>
      <tr>
        <td style="font-weight:bold;color:blue;">REPORTS</td>
        <td><%= link_to "Week 1 Report", wmgr_reports_weekly_path(1, 'xlsx') %></td>
        <td><%= link_to "Week 2 Report", wmgr_reports_weekly_path(2, 'xlsx') %></td>
        <td><%= link_to "Week 3 Report", wmgr_reports_weekly_path(3, 'xlsx') %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>